{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@auth/*": [
        "src/auth/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@email/*": [
        "src/email/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@users/*": [
        "src/users/*"
      ],
      "@lib/fe-shared": [
        "libs/fe-shared/src"
      ],
      "@lib/fe-shared/*": [
        "libs/fe-shared/src/*"
      ]
    }
  }
}